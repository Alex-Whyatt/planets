<%= form_with(model: line_item, local: true) do |form| %>
  <% if line_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

      <ul>
      <% line_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group" style="max-width: 40%">
  <div class="field">
     <%= form.label :sponsor_id %>
     <%= form.hidden_field :sponsor_id, :value => @sponsors.id %>
     <%= @sponsors.first_name %>
  </div>

  <div class="field">
    <%= form.label :donation, "Duration:"%>
    <%= form.select :donation, LineItem.donations.keys, prompt: 'Please select duration' %>
  </div>

   <div class="field">
    <%= form.label :amount, "Donation Amount (GBP)" %>
    <%= form.text_field :amount, class: "form-control;max-width:60%" %>
  </div>

  <div class="field">
    <%= form.hidden_field :cart_id %>
  </div>


  <div class="actions">
    <%= form.submit "Add" %>
  </div>
  <% end %>

</div>

